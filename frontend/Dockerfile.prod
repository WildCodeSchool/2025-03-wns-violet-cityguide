FROM node:lts-alpine AS builder
WORKDIR /app
COPY *.json .
COPY *.html .
COPY *.ts .
RUN npm install
COPY src src
RUN npm run build

FROM node:lts-alpine
WORKDIR /app
RUN apk --no-cache add curl
COPY --from=builder /app/dist/ ./build
COPY package*.json .
RUN npm install --omit=dev
CMD ["npm", "run", "start"]

